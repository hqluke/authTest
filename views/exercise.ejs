<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Exercise Selection</title>
        <link rel="stylesheet" href="/exercise.css" />
    </head>
    <body>
        <div class="container">
            <div class="eHeader">
                <% if (year && month && day) { %>
                    <h1>Add Workout</h1>
                    <p class="date-subtitle"><%= month %>/<%= day %>/<%= year %></p>
                <% } else { %>
                    <h1>Select Workout Type</h1>
                    <p class="date-subtitle">Today's Workout</p>
                <% } %>
            </div>
            
            <div class="button-container">
                <a href="/exercise/upper?<%= year && month && day ? `year=${year}&month=${month}&day=${day}` : '' %>">
                    <button class="exercise-button upper-button">
                        <span class="emoji">üí™</span>
                        <span class="button-text">Upper Body</span>
                    </button>
                </a>
                <a href="/exercise/lower?<%= year && month && day ? `year=${year}&month=${month}&day=${day}` : '' %>">
                    <button class="exercise-button lower-button">
                        <span class="emoji">ü¶µ</span>
                        <span class="button-text">Lower Body</span>
                    </button>
                </a>
                <a href="/exercise/run?<%= year && month && day ? `year=${year}&month=${month}&day=${day}` : '' %>">
                    <button class="exercise-button run-button">
                        <span class="emoji">üèÉ</span>
                        <span class="button-text">Run</span>
                    </button>
                </a>
            </div>
            
            <div class="bottom-buttons">
                <% if (year && month && day) { %>
                    <a href="/calendar?year=<%= year %>&month=<%= month %>">
                        <button class="back-button">‚Üê Back to Calendar</button>
                    </a>
                <% } else { %>
                    <a href="/">
                        <button class="back-button">‚Üê Back to Home</button>
                    </a>
                <% } %>
                <a href="/log-out">
                    <button class="logout-button">Log Out</button>
                </a>
            </div>
        </div>
    </body>
</html>
