<!DOCTYPE html>
<html>
    <head>
        <title>Calendar</title>
        <link rel="stylesheet" href="/calendarYear.css" />
    </head>
    <body>
        <h1>Workout Calendar - <%= year %></h1>

        <div class="month-grid">
            <% const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
            'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']; const countMap = {};
            monthlyCounts.forEach(row => { countMap[row.month] =
            row.workout_days; }); for (let i = 1; i <= 12; i++) { const count =
            countMap[i] || 0; %>
            <a
                href="/calendar?year=<%= year %>&month=<%= i %>"
                style="text-decoration: none; color: inherit"
            >
                <div class="month-card">
                    <div class="month-name"><%= monthNames[i-1] %></div>
                    <div class="workout-count"><%= count %></div>
                    <div class="workout-label">days</div>
                </div>
            </a>
            <% } %>
        </div>
    </body>
</html>
