<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Log Run</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/insertRun.css" />
    </head>
    <body>
        <h1>Log Your Run</h1>
        <% if (year && month && day) { %>
            <p style="text-align: center; color: #4caf50; font-size: 1.2rem; margin-bottom: 20px;">
                Date: <%= month %>/<%= day %>/<%= year %>
            </p>
        <% } %>
        <form action="/exercise/insertRun" method="POST">
            <% if (year && month && day) { %>
                <input type="hidden" name="year" value="<%= year %>" />
                <input type="hidden" name="month" value="<%= month %>" />
                <input type="hidden" name="day" value="<%= day %>" />
            <% } %>
            
            <!-- rest of your form stays the same -->
            <div class="form-container">
                <div class="form-group">
                    <label for="duration">Duration (HH:MM:SS)</label>
                    <input 
                        type="text" 
                        id="duration" 
                        name="duration" 
                        placeholder="00:15:30"
                        pattern="[0-9]{1,2}:[0-9]{2}:[0-9]{2}"
                        title="Format: HH:MM:SS (e.g., 00:15:30)"
                        required
                    />
                    <small>Format: HH:MM:SS (e.g., 00:15:30 for 15 minutes 30 seconds)</small>
                </div>

                <div class="form-group">
                    <label for="distance">Distance (miles)</label>
                    <input 
                        type="number" 
                        id="distance" 
                        name="distance" 
                        placeholder="3.50"
                        step="0.01"
                        min="0.01"
                        max="999.99"
                        required
                    />
                    <small>Enter distance in miles (e.g., 3.50)</small>
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">Save Run</button>
                <a href="/exercise<%= year && month && day ? `?year=${year}&month=${month}&day=${day}` : '' %>">
                    <button type="button" class="btn-cancel">Cancel</button>
                </a>
            </div>
        </form>

        <script>
            // Auto-format duration input
            const durationInput = document.getElementById('duration');
            
            durationInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/[^0-9]/g, '');
                
                if (value.length >= 2) {
                    value = value.slice(0, 2) + ':' + value.slice(2);
                }
                if (value.length >= 5) {
                    value = value.slice(0, 5) + ':' + value.slice(5);
                }
                if (value.length > 8) {
                    value = value.slice(0, 8);
                }
                
                e.target.value = value;
            });

            // Validate on submit
            document.querySelector('form').addEventListener('submit', function(e) {
                const duration = durationInput.value;
                const distance = document.getElementById('distance').value;
                
                // Validate duration format
                const durationRegex = /^[0-9]{1,2}:[0-9]{2}:[0-9]{2}$/;
                if (!durationRegex.test(duration)) {
                    e.preventDefault();
                    alert('Please enter duration in HH:MM:SS format (e.g., 00:15:30)');
                    return;
                }
                
                // Validate duration parts
                const parts = duration.split(':');
                const hours = parseInt(parts[0]);
                const minutes = parseInt(parts[1]);
                const seconds = parseInt(parts[2]);
                
                if (minutes >= 60 || seconds >= 60) {
                    e.preventDefault();
                    alert('Minutes and seconds must be less than 60');
                    return;
                }
                
                if (hours === 0 && minutes === 0 && seconds === 0) {
                    e.preventDefault();
                    alert('Duration must be greater than 0');
                    return;
                }
                
                // Validate distance
                const dist = parseFloat(distance);
                if (dist <= 0 || dist > 999.99) {
                    e.preventDefault();
                    alert('Please enter a valid distance between 0.01 and 999.99 miles');
                    return;
                }
            });
        </script>
    </body>
</html>
