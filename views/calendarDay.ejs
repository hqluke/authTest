<!DOCTYPE html>
<html>
    <head>
        <title>Workout Details - <%= month %>/<%= day %>/<%= year %></title>
        <link rel="stylesheet" href="/calendarDay.css" />
    </head>
    <body>
        <div class="container">
            <a href="/calendar?year=<%= year %>&month=<%= month %>" class="back-link">
                ‚Üê Back to Month View
            </a>
            
            <h1>Workout Details - <%= month %>/<%= day %>/<%= year %></h1>
            
            <% if (runs && runs.length > 0) { %>
                <div class="section-title">üèÉ Running</div>
                <div class="run-section">
                    <% runs.forEach(function(run) { %>
                        <div class="run-stats">
                            <div class="run-stat">
                                <div class="run-stat-label">Duration</div>
                                <div class="run-stat-value"><%= run.duration %></div>
                            </div>
                            <div class="run-stat">
                                <div class="run-stat-label">Distance (miles)</div>
                                <div class="run-stat-value"><%= run.distance %></div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
            
            <% 
            const upperWorkouts = workouts ? workouts.filter(w => w.isupperbody === true) : [];
            const lowerWorkouts = workouts ? workouts.filter(w => w.isupperbody === false) : [];
            
            function groupByExercise(workoutList) {
                const grouped = {};
                workoutList.forEach(w => {
                    const key = w.exercise_id || w.name;
                    if (!grouped[key]) {
                        grouped[key] = {
                            name: w.name,
                            exercise_id: w.exercise_id,
                            items: []
                        };
                    }
                    grouped[key].items.push(w);
                });
                return Object.values(grouped);
            }
            
            const upperGrouped = groupByExercise(upperWorkouts);
            const lowerGrouped = groupByExercise(lowerWorkouts);
            %>
            
            <% if (upperGrouped.length > 0) { %>
                <div class="section-title">üí™ Upper Body</div>
                <table>
                    <thead>
                        <tr>
                            <th>Exercise</th>
                            <th>Sets</th>
                            <th>Weight / Reps</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% upperGrouped.forEach(function(group) { 
                            const firstItem = group.items[0];
                        %>
                        <tr>
                            <td>
                                <a href="/calendar/edit?year=<%= year %>&month=<%= month %>&day=<%= day %>&exerciseId=<%= firstItem.exercise_id %>" 
                                   class="exercise-link">
                                    <%= group.name %>
                                </a>
                            </td>
                            <td><%= firstItem.sets %></td>
                            <td>
                                <div class="set-row">
                                    <% group.items.forEach(item => { %>
                                        <div class="set-item">
                                            <span><%= item.weight %></span>
                                            <span><%= item.reps %></span>
                                        </div>
                                    <% }) %>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
            
            <% if (lowerGrouped.length > 0) { %>
                <div class="section-title">ü¶µ Lower Body</div>
                <table>
                    <thead>
                        <tr>
                            <th>Exercise</th>
                            <th>Sets</th>
                            <th>Weight / Reps</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% lowerGrouped.forEach(function(group) { 
                            const firstItem = group.items[0];
                        %>
                        <tr>
                            <td>
                                <a href="/calendar/edit?year=<%= year %>&month=<%= month %>&day=<%= day %>&exerciseId=<%= firstItem.exercise_id %>" 
                                   class="exercise-link">
                                    <%= group.name %>
                                </a>
                            </td>
                            <td><%= firstItem.sets %></td>
                            <td>
                                <div class="set-row">
                                    <% group.items.forEach(item => { %>
                                        <div class="set-item">
                                            <span><%= item.weight %></span>
                                            <span><%= item.reps %></span>
                                        </div>
                                    <% }) %>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
            
            <% if ((!runs || runs.length === 0) && (!workouts || workouts.length === 0)) { %>
                <div class="no-data">
                    No workout data found for this day.
                </div>
            <% } %>
        </div>
    </body>
</html>
